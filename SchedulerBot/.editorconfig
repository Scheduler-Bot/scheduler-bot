root = true

# All files
[*]
end_of_line = crlf
indent_style = tab
insert_final_newline = true

# Xml project files
[*.{csproj,vbproj,vcxproj,vcxproj.filters,proj,projitems,shproj}]
indent_style = space
indent_size = 2

# Xml config files
[*.{props,targets,ruleset,config,nuspec,resx,vsixmanifest,vsct}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# TypeScript files
[*.ts]
indent_size = 2
